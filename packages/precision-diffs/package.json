{
  "name": "@pierre/precision-diffs",
  "version": "0.0.3",
  "type": "module",
  "scripts": {
    "build": "tsc --build && bun post-build.js",
    "dev": "tsc --build --watch",
    "tsc": "tsc",
    "prepublishOnly": "echo 'Error: Do not run bun publish directly. Use: bun run publish' && exit 1",
    "publish": "bun run build && bun prepare-publish.js && cd dist && bun publish"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./react": {
      "import": "./src/react/index.ts",
      "types": "./src/react/index.ts"
    },
    "./ssr": {
      "import": "./src/ssr/index.ts",
      "types": "./src/ssr/index.ts"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "catalog:",
    "@types/hast": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@shikijs/core": "catalog:",
    "@shikijs/transformers": "catalog:",
    "diff": "catalog:",
    "fast-deep-equal": "catalog:",
    "hast-util-to-html": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "shiki": "catalog:"
  }
}
