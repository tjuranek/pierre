{
  "name": "@pierre/js",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "@shikijs/core": "3.13.0",
      "@types/hast": "^3.0.4",
      "@types/react": "19.1.13",
      "@types/react-dom": "19.1.9",
      "@vitejs/plugin-react": "5.0.3",
      "hast-util-to-html": "^9.0.5",
      "react": "19.1.1",
      "react-dom": "19.1.1",
      "shiki": "3.13.0",
      "typescript": "5.9.2",
      "vite": "npm:rolldown-vite@7.1.12"
    }
  },
  "scripts": {
    "demo:prod": "bun run --filter @pierre/js-demo-app prod",
    "demo:dev": "bun run --filter @pierre/js-demo-app dev",
    "demo:build": "bun run --filter @pierre/js-demo-app build",
    "clean": "rm -rf packages/*/dist && rm -rf packages/*/tsconfig.tsbuildinfo && rm -rf packages/demo-app/node_modules/.vite && rm -rf packages/demo-app/node_modules/.vite-temp",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@types/bun": "1.2.22",
    "eslint": "9.36.0",
    "prettier": "3.6.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.1"
  }
}
